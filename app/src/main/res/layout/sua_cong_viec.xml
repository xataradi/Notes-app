<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="EDIT YOUR NOTE"
        android:textColor="#ABD0BC"
        android:textSize="25sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/editTextEditTitleCongViec"
        android:layout_below="@+id/textViewEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
/>
    <EditText
        android:id="@+id/editTextEditTenCongViec"
        android:layout_below="@+id/editTextEditTitleCongViec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
 />

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEditTenCongViec"
        android:layout_marginTop="20dp"
        android:text="CONFIRM" />

    <Button
        android:id="@+id/buttonHuyEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonEdit"
        android:text="CANCEL" />




</RelativeLayout>